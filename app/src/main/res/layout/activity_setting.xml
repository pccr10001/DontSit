<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/White"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/setting_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            app:theme="@style/ToolBarStyle"
            app:popupTheme="@style/ToolbarPopupStyle"
            android:minHeight="?attr/actionBarSize"
            android:maxHeight="?attr/actionBarSize">

        <ImageView
                android:onClick="BackParent"
                android:src="@drawable/common_back"
                android:scaleType="fitXY"
                android:layout_marginEnd="5sp"
                android:layout_width="25sp"
                android:layout_height="20sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="25sp"
                android:textColor="@color/White"
                android:text="@string/ConnectionSetting"
                android:gravity="center_vertical"
                android:id="@+id/toolbar_title"/>

    </android.support.v7.widget.Toolbar>

    <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/common_toolbar_shadow"/>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60sp">

        <TextView
                android:layout_marginStart="10sp"
                android:text="@string/ScanFrequency"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="60sp"/>

        <Spinner
                android:layout_marginEnd="10sp"
                android:layout_alignParentEnd="true"
                android:id="@+id/spinner_label"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:padding="8dp"
                android:dropDownWidth="88sp"
                android:gravity="end"
                style="@style/Material.Widget.Spinner"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"/>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60sp">

        <TextView
                android:layout_marginStart="10sp"
                android:text="@string/ClockSound"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="60sp"/>

        <TextView
                android:layout_margin="10sp"
                android:id="@+id/ClockSoundPathEditText"
                android:gravity="center_vertical|end"
                android:textSize="20sp"
                android:minWidth="150sp"
                android:maxWidth="150sp"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="60sp"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"/>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60sp">

        <TextView
                android:layout_marginStart="10sp"
                android:text="@string/CushionMac"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="60sp"/>

        <TextView
                android:id="@+id/CushionMacEditText"
                android:gravity="center_vertical|end"
                android:paddingStart="8sp"
                android:paddingEnd="8sp"
                android:minWidth="150sp"
                android:textSize="20sp"
                android:layout_margin="10sp"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="60sp"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"/>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60sp">

        <TextView
                android:layout_marginStart="10sp"
                android:text="@string/DefaultSetting"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="60sp"/>

        <com.rey.material.widget.Switch
                android:id="@+id/DefaultSettingSwitch"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:gravity="center"
                android:checked="false"
                android:padding="16dp"/>

    </RelativeLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"/>

    <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60sp">

        <TextView
                android:layout_marginStart="10sp"
                android:text="@string/ResetData"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="60sp"/>

        <com.rey.material.widget.Switch
                android:id="@+id/ResetDataSwitch"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:gravity="center"
                android:checked="false"
                android:padding="16dp"/>

    </RelativeLayout>

</LinearLayout>