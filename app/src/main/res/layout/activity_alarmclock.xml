<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.rey.material.widget.CheckBox
                style="@style/Material.Drawable.CheckBox"
                android:layout_weight="2"
                android:id="@+id/ClockType"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:text="@string/EveryTimeType"/>

        <NumberPicker
                android:id="@+id/HourNumberPicker"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="時" />

        <NumberPicker
                android:id="@+id/MinuteNumberPicker"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="分" />

        <NumberPicker
                android:id="@+id/SecondNumberPicker"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="秒" />

        <Button
                android:id="@+id/ClockAddButton"
                android:layout_weight="2"
                android:text="@string/add"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"/>

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

    <ListView
            android:id="@+id/ClockListView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

</LinearLayout>